<Window
    x:Class="RomgrApp.UI.Windows.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:RomgrApp.UI.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RomgrApp"
    Width="1200"
    MinWidth="1000"
    MinHeight="500"
    d:DesignHeight="450"
    d:DesignWidth="1000"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="40"
    ExtendClientAreaToDecorationsHint="True"
    mc:Ignorable="d">
    <Border BorderBrush="{StaticResource DividerColor}" BorderThickness="1">
        <DockPanel LastChildFill="True">
            <!--  Window title  -->
            <Border
                x:Name="TitleArea"
                Height="40"
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="0,0,0,1"
                Padding="10,0,10,0"
                DockPanel.Dock="Top">
                <RelativePanel>
                    <StackPanel RelativePanel.AlignLeftWithPanel="True" Orientation="Horizontal" Spacing="5" RelativePanel.AlignVerticalCenterWithPanel="True">
                        <Label Content="RETRO ROMS" FontWeight="Bold" FontSize="24" Margin="0,0, 20, 0" IsHitTestVisible="False" />
                        <Button Width="24" Height="24" BorderThickness="0" x:Name="OpenWorkspaceAction">
                            <Button.Background>
                                <VisualBrush Visual="{SvgImage /Resource/buttons/workspace.svg}"></VisualBrush>
                            </Button.Background>
                        </Button>
                        <Button Width="24" Height="24" BorderThickness="0" IsVisible="False">
                            <Button.Background>
                                <VisualBrush Visual="{SvgImage /Resource/buttons/platforms.svg}"></VisualBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                    <StackPanel RelativePanel.AlignRightWithPanel="True" Orientation="Horizontal" Spacing="10" RelativePanel.AlignVerticalCenterWithPanel="True">
                        <Button Width="20" Height="20" BorderThickness="0" x:Name="WindowMinimizeAction">
                            <Button.Background>
                                <VisualBrush Visual="{SvgImage /Resource/buttons/window_minimize.svg}"></VisualBrush>
                            </Button.Background>
                        </Button>
                        <Button Width="20" Height="20" BorderThickness="0" x:Name="WindowMaximizeAction">
                            <Button.Background>
                                <VisualBrush Visual="{SvgImage /Resource/buttons/window_maximize.svg}"></VisualBrush>
                            </Button.Background>
                        </Button>
                        <Button Width="20" Height="20" BorderThickness="0" x:Name="WindowCloseAction">
                            <Button.Background>
                                <VisualBrush Visual="{SvgImage /Resource/buttons/window_close.svg}"></VisualBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </RelativePanel>
            </Border>
            <!--  platforms  -->
            <Border
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="0,0,1,0"
                DockPanel.Dock="Left">
                <components:PlatformVListView />
            </Border>
            <!--  categories  -->
            <Border
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="0,0,1,0"
                DockPanel.Dock="Left">
                <components:CategoryVListView Width="160" />
            </Border>
            <!--  game list  -->
            <!--Border
                Width="300"
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="0,0,1,0"
                DockPanel.Dock="Left">
                <components:GameVListView />
            </Border-->

            <Grid ColumnDefinitions="*,300" DockPanel.Dock="Left">
                <components:GameGridListView Grid.Column="0" />
                <Border IsVisible="True"
                        Grid.Column="1"
                        BorderBrush="{StaticResource DividerColor}"
                        BorderThickness="1,0,0,0">
                    <Panel></Panel>
                </Border>
            </Grid>

        </DockPanel>
    </Border>
</Window>