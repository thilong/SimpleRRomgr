<Window
    x:Class="RomgrApp.UI.Windows.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:RomgrApp.UI.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RomgrApp"
    Width="1200"
    MinWidth="1000"
    MinHeight="500"
    d:DesignHeight="450"
    d:DesignWidth="1000"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="40"
    ExtendClientAreaToDecorationsHint="True"
    mc:Ignorable="d">
    <Border BorderBrush="{StaticResource DividerColor}" BorderThickness="1">
        <DockPanel LastChildFill="True">
            <!--  Window title  -->
            <Border
                x:Name="TitleArea"
                Height="40"
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="0,0,0,1"
                Padding="10,0,10,0"
                DockPanel.Dock="Top">
                <RelativePanel
                    VerticalAlignment="Center">
                    <StackPanel RelativePanel.AlignLeftWithPanel="True" Orientation="Horizontal" >
                        <Button Content="Workspace" />
                        <Button Content="Platforms" />
                    </StackPanel>
                    <StackPanel RelativePanel.AlignRightWithPanel="True" Orientation="Horizontal">
                        <Button
                            x:Name="WindowMinimizeActionButton"
                            Margin="10,0,0,0"
                            Content="-" />
                        <Button x:Name="WindowMaximizeActionButton" Content="ðŸ—–" />
                        <Button x:Name="WindowCloseActionButton" Content="âœ•" />
                    </StackPanel>
                </RelativePanel>
            </Border>
            <!--  platforms  -->
            <Border
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="0,0,1,0"
                DockPanel.Dock="Left">
                <components:PlatformVListView />
            </Border>
            <!--  categories  -->
            <Border
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="0,0,1,0"
                DockPanel.Dock="Left">
                <components:CategoryVListView Width="200" />
            </Border>
            <!--  game list  -->
            <Border
                Width="300"
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="0,0,1,0"
                DockPanel.Dock="Left">
                <components:GameVListView />
            </Border>
            <Panel />
        </DockPanel>
    </Border>
</Window>
