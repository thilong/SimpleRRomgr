<Window
    x:Class="RomgrApp.UI.Windows.LoadingMaskWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:RomgrApp.UI.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RomgrApp"
    d:DesignHeight="100"
    d:DesignWidth="200"
    MaxWidth="300"
    MaxHeight="150"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="0"
    ExtendClientAreaToDecorationsHint="True"
    mc:Ignorable="d">
    <Border BorderBrush="{StaticResource DividerColor}" BorderThickness="1" CornerRadius="8">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBlock Text="Loading...." FontSize="16"></TextBlock>
            <Button x:Name="CancelAction"> Cancel </Button>
        </StackPanel>
    </Border>
</Window>